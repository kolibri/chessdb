{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} {{ 'security.login.title'|trans }}{% endblock %}
{% block headline %}{{ 'security.login.title'|trans }}{% endblock %}

{% block content %}
    <section class="register">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login_check') }}" method="post">
            <label for="username">{{ 'security.login.form.label.username'|trans }}:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}"/>

            <label for="password">{{ 'security.login.form.label.password'|trans }}:</label>
            <input type="password" id="password" name="_password"/>

            <button type="submit">{{ 'security.login.form.label.submit'|trans }}</button>
        </form>
    </section>
{% endblock %}